generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum status {
  Unpaid
  Installment
  Paid
}

model User {
  id            Int        @id @default(autoincrement())
  name          String?    @db.VarChar(100)
  email         String?    @unique @db.VarChar(100)
  password      String?    @db.VarChar(255)
  created_at    DateTime?  @default(now()) @db.Timestamp(0) @map("created_at")
  schedules     Schedule[] // Perbaiki nama relasi balik di User menjadi plural dan lowercase (karena many to one)
  Expenditures  Expenditure[]
  Debts         Debt[]
  @@map("users") //digunakan untuk menyesuaikan nama yang ada di database
}

model Schedule {
  id                    Int       @id @default(autoincrement())
  user_id               Int?      
  title                 String?   @db.VarChar(100)
  description           String?   @db.Text
  date                  DateTime? @db.Date
  time                  String?
  created_at            DateTime? @default(now()) @db.Timestamp(0) @map("created_at")
  User                  User?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  @@index([user_id])
  @@map("schedules")
}

model Expenditure {
  id                    Int       @id @default(autoincrement())
  user_id               Int?      
  item_name             String?   @db.VarChar(100)
  description           String?   @db.Text
  harga                 Int?      @db.Int
  date                  DateTime? @db.Date
  created_at            DateTime? @default(now()) @db.Timestamp(0) @map("created_at")
  User                  User?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  @@index([user_id])
  @@map("expenditures")
}

model Debt {
  id                    Int       @id @default(autoincrement())
  user_id               Int?      
  creditor_name         String?   @db.VarChar(100)
  debtor_name           String?   @db.VarChar(100)
  amount                Int?      @db.Int
  borrowed_date         DateTime? @db.Date
  description           String?   @db.Text
  status                status?   @default(Unpaid)
  paid_date             DateTime? @db.Date
  created_at            DateTime? @default(now()) @db.Timestamp(0) @map("created_at")
  updated_at            DateTime  @updatedAt @db.Timestamp(0) @map("updated_at")
  User                  User?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  @@index([user_id])
  @@map("debts")
}

